<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clock_analog_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <AnalogClock
        android:id="@+id/clock_analog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:dial="@drawable/clock_dialog_type_2_dial"
        android:hand_hour="@drawable/clock_dialog_type_1_hand_hour"
        android:hand_minute="@drawable/clock_dialog_type_1_hand_minute"
        android:hand_second="@drawable/clock_dialog_type_1_hand_second" />
</FrameLayout>